<h1>Games#new</h1>
<p>Find me in app/views/games/new.html.erb</p>
<% @letters.each do |letter|%>
  <button class="btn btn-primary"><%= letter%></button>
<% end%>

<form action="/score" method="post" data-turbo="false" class="mt-3">
  <!-- ... -->
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= hidden_field_tag :letters, @letters.join %>
  <p>What is the longest word you can find?</p>
  <input type="text" name="answer">
  <input type="submit"  value="Play">
</form>
